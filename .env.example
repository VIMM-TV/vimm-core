# Database Configuration
# Path to the SQLite database file
# Default: /root/database.sqlite
# Note: Ensure the directory exists and is writable
DATABASE_PATH=/root/database.sqlite

# Server Configuration
# Port for the HTTP server
# Default: 3000
PORT=3000

# Server IP for RTMP stream URLs
# Default: localhost
SERVER_IP=localhost

# Authentication Configuration
# Secret key for JWT token generation
# Default: auto-generated (not recommended for production)
JWT_SECRET=your_jwt_secret_key_here

# Hive Configuration
# Private posting key for Hive blockchain integration
HIVE_POSTING_KEY=your_hive_posting_key_here

# Environment
# Application environment (development, production)
# Default: development
NODE_ENV=development